doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="theme-color", content="#3700ff")
    title Login to Favcon
    link(rel="stylesheet", href="/css/login.css")
    link(rel="icon", href="/img/icon.png", type="image/png")
    script(src="/socket.io/socket.io.js")
  body 
    section.sec
      div.bubble
      div.container 
        div.image 
          div.img 
            img(src="/img/img.png", alt="")
          h1 Favcon
          p Welcome back, to continue with Favcon please kindly login
        div.fill 
          div.head 
            div.logo 
              img(src="/img/img.png", alt="")
            h1 Login
          form(action="/login", method="post")
            div.field
              img#f-icon(src="/img/user.png", alt="")
              label(for="username") Username
              input(type="text", name="username", id="username", required, placeholder="Username") 
            div.field 
              img#f-icon(src="/img/padlock.png", alt="")
              label(for="password") Password
              input(type="password", name="password", id="password", required, placeholder="Password") 
              img(src="/img/view.png", alt="", id="view-pass")
            div.field#submit-field 
              div.message#warn= message
              dv.inp-f
                input(type="submit", value="Login", id="submit")
                div.loading#loading
                  div.load
          footer 
            span Don't have an account?
            a(href="/signup") Signup
    script(src="/js/login.js") 